{
	"version": "1.0.0-*",
	"description": "Command line tool to convert xml .net documentation in Markdown",
	"packOptions": {
		"tags": [
			"dotnet",
			"markdown",
			"docxml2md",
			"xml2md",
			"md"
		]
	},
	"authors": [ "Dario Chini" ],
	"buildOptions": {
		"emitEntryPoint": true,
		"outputName": "dotnet-docxml2md"
	},

	"dependencies": {
		"Microsoft.Extensions.CommandLineUtils": "1.0.0",
		"Microsoft.NETCore.App": {
			"type": "platform",
			"version": "1.0.1"
		}
	},


	"frameworks": {
		"netcoreapp1.0": {
			"imports": "dnxcore50"
		}
	}
}

